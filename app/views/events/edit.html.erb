
<div class="container">
  <h1 class="text-center my-5"> Modifier l'événement</h1>
  <div class="col-12">
    <div class="shadow-none bg-light rounded p-4">
      <%= form_for @event, url: {action: "update"} do |f| %>
      <%= f.text_field :title, class: "form-control", placeholder: "Titre" %><br>
      <%= f.text_area :description, class: "form-control", placeholder: "description"%><br>
      <%= f.datetime_field :start_date, class: "form-control", placeholder: "start_date"%><br>
      <%= f.text_area :duration, class: "form-control", placeholder: "duration"%><br>
      <%= f.text_area :price, class: "form-control", placeholder: "price"%><br>
      <%= f.text_area :location, class: "form-control", placeholder: "location"%><br>
      <%= submit_tag "Modifier événement",  class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
