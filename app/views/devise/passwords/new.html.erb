
<div class="text-center mt-5">
  <div class="m-auto" style="width: 300px">
    <h1 class="h3 mb-3 font-weight-normal">Mot de passe oubliÃ©</h1>


    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'Email' %>
    </div>
      <br>
    <div class="actions">
      <%= f.submit "Envoyer un nouveau mot de passe",  class: "btn btn-md btn-primary btn-block" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
