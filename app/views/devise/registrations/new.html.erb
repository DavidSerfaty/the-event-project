<div class="text-center mt-5">
  <div class="m-auto" style="width: 300px">
    <h1 class="h3 mb-3 font-weight-normal">Inscription</h1>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'Email' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: 'Mot de passe (6 caractÃ¨res minimum)' %>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: 'Confirmation mot de passe' %>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "S'inscrire",  class: "btn btn-lg btn-primary btn-block" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
