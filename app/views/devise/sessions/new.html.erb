
<div class="text-center mt-5">
  <div class="m-auto" style="width: 300px">
    <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: 'Email' %>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: 'Mot de passe (6 caractÃ¨res minimum)' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Se connecter",  class: "btn btn-lg btn-primary btn-block" %>
    </div>
    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
