<p id="notice"><%= notice %></p>

<div class="container text-center">

  <h1 class="text-center m-5">
    Utilisateur
  </h1>

  <div class="row">
    <div class="col-md-12 col-lg-4 px-3">
      <div class="bg-light rounded border text-left px-4">
        <h2 class="my-4 text-center">Profil</h2>
        <p><strong>Email :</strong> <%= @user.email %></p>
        <p><strong>Prénom :</strong> <%= @user.first_name %></p>
        <p><strong>Nom :</strong> <%= @user.last_name %></p>
        <p><strong>Description :</strong> <%= @user.description %></p>
        <%= link_to 'Modifier', edit_user_path(@user) %> |
        <%= link_to 'Modifier mot de passe', edit_user_registration_path %>
      </div>
    </div>
    <div class="col-md-12 col-lg-8 px-3">
      <div class="px-3">

      <h2 class="my-4">Mes événements <%= @user.first_name %></h2>
      <% @user.events.each do |event| %>
      <div class="row justify-content-center text-left">
        <div class="col">
          <div class="card mb-4 box-shadow">
            <div class="card-body">
              <h6 class="card-subtitle mb-2 text-muted"><%= event.start_date.strftime("%A %e %B %Y à %kh%M") %></h6>
              <h5 class="card-title"><%= event.title %></h5>
              <p class="card-text"><%= event.title %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to 'Voir', event, class: "btn btn-sm btn-outline-secondary" %>
                  <%= link_to 'Modifier', edit_event_path(event), class: "btn btn-sm btn-outline-secondary" %>
                  <%= link_to 'Supprimer', event, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-secondary" %>
                </div>
                <small class="text-muted"><%= event.price %>€</small>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
    </div>

    </div>
  </div>
